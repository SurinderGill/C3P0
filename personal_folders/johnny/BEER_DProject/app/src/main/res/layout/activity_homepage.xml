<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:weightSum="1"
    android:background="@drawable/background1">


    <ImageView
        android:layout_width="351dp"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:src="@drawable/beerd"
        android:maxHeight="16dp"
        android:maxWidth="16dp"
        android:layout_weight="0.05" />

    <Button
        android:name="btnSearch"
        android:id="@+id/btnSearch"

        android:text="@string/btnSearchTxT"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/buttonbg1"

        android:layout_width="225dp"
        android:layout_height="100dp"

        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal" />


    <Button
        android:name="btnPrevSearch"
        android:id="@+id/btnPrevSearch"

        android:text="@string/btnPrevSearchTxT"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/buttonbg1"

        android:layout_width="225dp"
        android:layout_height="100dp"

        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:name="btnInfo"
        android:id="@+id/btnInfo"
        android:onClick="ToGenInfo"

        android:text="@string/btnInfoTxT"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/buttonbg1"

        android:layout_width="225dp"
        android:layout_height="100dp"

        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

